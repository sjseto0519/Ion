<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Layout styles -->
	
	<style name="layout_main" parent="@android:style/TextAppearance">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:background">#646464</item>
	</style>
	
	<style name="layout_vertical_1" parent="@android:style/TextAppearance">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_marginTop">25px</item>
		<item name="android:layout_marginRight">5px</item>
		<item name="android:layout_marginLeft">5px</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
	</style>
	
	<style name="layout_horizontal_1" parent="@android:style/TextAppearance">
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_marginTop">10px</item>
		<item name="android:layout_marginRight">5px</item>
		<item name="android:layout_marginLeft">5px</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
	</style>
	
	<style name="layout_about_vertical" parent="@android:style/TextAppearance">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_marginRight">5px</item>
		<item name="android:layout_marginLeft">5px</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>

	<!-- Label styles -->
	
	<style name="main_title" parent="@android:style/TextAppearance">
		<item name="android:textSize">25sp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:layout_marginTop">15px</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
	</style>
	
	<style name="label_1" parent="@android:style/TextAppearance">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:layout_marginTop">15px</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
	</style>
	
	<style name="label_about" parent="@android:style/TextAppearance">		
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<!-- Buttons styles -->
	
	<style name="basic_button" parent="@android:style/TextAppearance">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">0.5</item>
	</style>
	
	<!-- Indoor styles -->
	
	<style name="PageHeader">
        <item name="android:textColor">#00FF00</item>
    </style>
    <style name="Header">
        <item name="android:textColor">#00FF00</item>
    </style>
    <style name="Button">
        <item name="android:textColor">#00FF00</item>
    </style>
        <style name="DialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogText.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
        <style name="Button2" parent="@android:style/Widget.Button">
	    <item name="android:gravity">center_vertical|center_horizontal</item>
	    <item name="android:textColor">#FFFFFFFF</item>
	    <item name="android:shadowColor">#FF000000</item>
	    <item name="android:shadowDx">0</item>
	    <item name="android:shadowDy">-1</item>
	    <item name="android:shadowRadius">0.2</item>
	    <item name="android:textSize">16dip</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:background">@drawable/btn_custom</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
</resources>